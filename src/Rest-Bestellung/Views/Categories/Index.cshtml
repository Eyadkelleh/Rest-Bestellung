@model IEnumerable<Rest_Bestellung.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<!-- Creating a new button wiht partial view-->
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<h2>
    <i class="fas fa-th-list"></i>
    &nbsp; Index Category
</h2>
<br />
<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<div class="form-border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOder)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOder)
                    </td>
                    <td>
                        @Html.Partial("_TableButtonPartial", item.Id)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>