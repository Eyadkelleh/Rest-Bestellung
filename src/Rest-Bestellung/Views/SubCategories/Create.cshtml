@model Rest_Bestellung.Models.SubCategoryViewModels.SubCategoryAndCategoryViewModel
@{
    ViewData["Title"] = "Create";
}
<br />
<h2>Create Sub Category</h2>
<br />
<form asp-action="Create">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SubCategory.Name" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="SubCategory.Name" class="form-control" />
                <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SubCategory.CategoryId" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SubCategory.Category.Name" class="form-control" />
            </div>
        </div>
        <div>
            
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="isNew" class="form-check-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="isNew" class="form-check" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to list</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}